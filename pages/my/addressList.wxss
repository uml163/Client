/* pages/my/addressList.wxss */
.container {
    background-color:#F2f2f2;
}
.address-list{
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    padding-bottom: 100rpx;
}
.address-list .a-address{
    width: 720rpx;
    margin-left: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
}
.a-address .left-text{
    width: 610rpx;
    box-sizing: border-box;
    padding-left: 58rpx;
}
.a-address .left-text.active{
    background: url(http://119.23.56.12:5000/static/upload/20190509/7da6b1434f92494e9f80ed5d90946d05.png) no-repeat left center;
    background-size: 28rpx auto;
}
.a-address .left-text .name-tel{
    margin-bottom: 20rpx;
}
.a-address .left-text .address-box{
    font-size:24rpx;
    color:#888888;
    line-height:36rpx;
}
.a-address .right-edit{
    width: 109rpx;
    height: 100%;
    padding: 50rpx 0 50rpx 58rpx;
    box-sizing: border-box;
    background: url(http://119.23.56.12:5000/static/upload/20190509/dd53d83ef3eb4453981196a34d7e4ef3.png) no-repeat 43rpx center;
    background-size: 35rpx auto;
}
.bottom-box{
    position: fixed;
    width: 100%;
    bottom: 0;
    font-size:28rpx;
    color:#000000;
    border-top: 1rpx solid #eee;
    height:100rpx;
    line-height: 100rpx;
    background: #fff url(http://119.23.56.12:5000/static/upload/20190509/b669f42fa43d4cab96f7c10ade282408.png) no-repeat 705rpx center;
    background-size: 15rpx auto;
}
.bottom-box .add-btn{
    margin-left: 30rpx;
    padding-left: 70rpx;
    background: url(http://119.23.56.12:5000/static/upload/20190509/c4e8658f9d20476fb728eb7a3bcae4f0.png) no-repeat left center;
    background-size: 40rpx auto;
}